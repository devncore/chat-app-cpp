{
  "version": "2.1.0",
  "tasks": [
    {
      "label": "build_and_run_client",
      "type": "shell",
      "command": "cmake --build build && ./build/client/chat_client --server=localhost:50051",
      "dependsOn": [
        "configure_root"
      ],
      "detail": "Build and run the Qt client executable from the root build"
    },
    {
      "label": "create_initial_server_db",
      "type": "shell",
      "command": "bash tools/init_server_db.sh",
      "detail": "Initialize the server SQLite database"
    },
    {
      "label": "build_and_run_server",
      "type": "shell",
      "command": "cmake --build build && ./build/server/chat_server --listen=0.0.0.0:50051",
      "dependsOn": [
        "configure_root",
        "create_initial_server_db"
      ],
      "detail": "Build and run the Qt server executable from the root build"
    },
    {
      "label": "configure_server_tests",
      "type": "shell",
      "command": "cmake -S . -B build -DBUILD_TESTS=ON",
      "detail": "Configure CMake with tests enabled"
    },
    {
      "label": "build_and_run_server_unit_tests",
      "type": "shell",
      "command": "cmake --build build --target chat_server_tests && ctest --test-dir build/server/tests --output-on-failure",
      "dependsOn": [
        "configure_server_tests"
      ],
      "detail": "Build and run server unit tests"
    },
    {
      "label": "configure_root",
      "type": "shell",
      "command": "cmake -S . -B build",
      "detail": "Configure the root CMake project"
    },
    {
      "label": "clang_tidy",
      "type": "shell",
      "command": "mkdir -p temp && run-clang-tidy -p build -export-fixes temp/clang-tidy-report.yaml -extra-arg-before=-isystem -extra-arg-before=/usr/include -extra-arg=-Wno-system-headers $(rg --files -g \"*.cpp\" client server common)",
      "dependsOn": [
        "configure_root"
      ],
      "detail": "Run clang-tidy on the codebase"
    },
    {
      "label": "clang_format_all",
      "type": "shell",
      "command": "git ls-files \"*.c\" \"*.cc\" \"*.cxx\" \"*.cpp\" \"*.h\" \"*.hh\" \"*.hpp\" \"*.hxx\" | xargs clang-format -i",
      "detail": "Run clang-format on all tracked C/C++ sources"
    },
    {
      "label": "build_root",
      "type": "shell",
      "command": "cmake --build build",
      "dependsOn": [
        "configure_root"
      ],
      "detail": "Build the root CMake project"
    },
    {
      "label": "run_server_root",
      "type": "shell",
      "command": "./build/server/chat_server --listen=0.0.0.0:50051",
      "dependsOn": [
        "build_root",
        "create_initial_server_db"
      ],
      "detail": "Run the server from the root build"
    },
    {
      "label": "run_client_root_1",
      "type": "shell",
      "command": "./build/client/chat_client --server=localhost:50051",
      "dependsOn": [
        "build_root"
      ],
      "detail": "Run the first client from the root build"
    },
    {
      "label": "run_client_root_2",
      "type": "shell",
      "command": "./build/client/chat_client --server=localhost:50051",
      "dependsOn": [
        "build_root"
      ],
      "detail": "Run the second client from the root build"
    },
    {
      "label": "build_and_run_server_and_two_clients",
      "dependsOn": [
        "create_initial_server_db",
        "run_server_root",
        "run_client_root_1",
        "run_client_root_2"
      ],
      "dependsOrder": "parallel",
      "detail": "Build the root CMake project, then run 1 server + 2 clients"
    },
    {
      "label": "clean_all",
      "type": "shell",
      "command": "rm -rf build/",
      "detail": "Remove all build artifacts from the root build"
    },
    {
      "label": "generate_doxygen",
      "type": "shell",
      "command": "mkdir -p docs/doxygen && doxygen Doxyfile",
      "detail": "Generate Doxygen documentation"
    }
  ]
}